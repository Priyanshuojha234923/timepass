@{
    ViewBag.Title = "gallery";
    Layout = "~/Views/Shared/adminmaster.cshtml";
}

@using System.Data;
@using System.Data.SqlClient;
@using timepass.Models;
<link href="~/Content/gallery.css" rel="stylesheet" />
<script src="~/Content/gallery.js"></script>
<link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />


<div id="gallery" class="container-fluid">
    @{
        string cmd = "select * from gallery";
        DBmanager db = new DBmanager();
        DataTable dt = db.GetAllRecords(cmd);

        if (dt.Rows.Count > 0)
        {
            for (int i = 0; i < dt.Rows.Count; i++)
            {

        <div style="box-shadow:2px 4px 4px 2px grey;margin-top:10px">
            <img src="/content/notice/@dt.Rows[i]["photo"]" class="img-responsive">
            <a href="/Admin/DeleteGALLERY?del=@dt.Rows[i]["number"]">
               <center> <span class="fa fa-trash"style="color:red"><strong>Delete This Photo Permanently</strong></span></center>
            </a>
        </div>
            }
        }

    }


</div>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-body">
            </div>
        </div>

    </div>
</div>

<center><div class="stage" style="margin-top:50px">
    <a class="btn" href="/ADMIN/ADDgallery">ADD photo</a>
</div>
</center>
<style>
    .btn {
        font-size: 20px;
        border: none;
        outline: none;
        background: #c38b8b;
        color: #fff;
        cursor: pointer;
        position: relative;
        z-index: 0;
        border-radius: 10px;
    }

        .btn::before {
            position: absolute;
            content: "";
            width: calc(100% + 4px);
            height: calc(100% + 4px);
            left: -2px;
            top: -2px;
            background: linear-gradient( 124deg, #ff2400, #e81d1d, #e8b71d, #e3e81d, #1de840, #1ddde8, #2b1de8, #dd00f3, #dd00f3 );
            background-size: 400%;
            z-index: -1;
            filter: blur(5px);
            animation: move 20s linear infinite;
            opacity: 0;
            transition: opacity 0.3s ease-in-out;
            border-radius: 10px;
        }

        .btn:hover::before {
            opacity: 1;
        }

        .btn::after {
            z-index: -1;
            content: "";
            position: absolute;
            width: 100%;
            height: 100%;
            background: #555273;
            left: 0;
            top: 0;
            border-radius: 10px;
        }
</style>