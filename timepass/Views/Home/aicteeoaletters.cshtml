@{
    ViewBag.Title = "aicteeoaletters";
    Layout = "~/Views/Shared/GeneralMaster.cshtml";
}



@using System.Data;
@using System.Data.SqlClient;
@using timepass.Models;



<div class="container-fluid">

    <div class="row">
        <center>
            
            <div style="min-height: 200px; width: 98%; text-align: justify; border-bottom-right-radius: 50px; background-color: white; border-bottom-right-radius: 50px; box-shadow: 3px 4px 2px 4px grey; border-top-left-radius: 50px;">
                <div class="row course" style="background:#3a3b3c;max-height:80px;width:100%;text-align:center;padding:0.5%;margin-top:10px;border-top-left-radius:50px;color:white;margin-left:0px"><h2><strong><a>MANDATORY DISCLOSURE</a></strong></h2></div>
                <span class="" style="font-size:140%;font-family:'Bell MT';">
                    The All India Council for Technical Education (AICTE) is a statutory body, and a national-level council
                    for technical education, under the Department of Higher Education. Established in November 1945 first as an advisory
                    body and later on in 1987 given statutory status by an Act of Parliament, AICTE is responsible for proper planning and
                    coordinated development of the technical education and management education system in India.


                    Every year branch and intake approval is given by AICTE and after an
                    approval an Extension of Approval(EOA) Letter is issued to the concerned institute.
                </span>
                <div class="table-responsive" style=" margin-bottom: 30px;margin-top:20px;text-align:center">
                    <table class=" table table-hover">

                        <div style="background-color: #3a3b3c"><h4 style="color:white;padding:5px"><strong>Extension of Approval letter of past years are as follows:</strong></h4></div>


                        @{
                            string cmd = "select * from AICTELETTER";
                            DBmanager db = new DBmanager();
                            DataTable dt = db.GetAllRecords(cmd);
                            if (dt.Rows.Count > 0)
                            {
                                <thead>

                                <th><strong>LETTER</strong></th>
                                <th><strong>YEAR</strong></th>


                                </thead>

                                for (int i = 0; i < dt.Rows.Count; i++)
                                {
                                    <tr style="font-family:Bahnschrift;font-style:italic">

                                        <td><a href="/content/notice/@dt.Rows[i]["LETTER"]">@dt.Rows[i]["NAME"]</a></td>
                                        <td>@dt.Rows[i]["YEAR"]</td>



                                    </tr>
                                }

                            }
                            else
                            {
                                <span>  <h2>""NO DATA FOUND""</h2></span>
                            }
                        }
                    </table>
                </div>

            </div>



        </center>




    </div>

</div>



























































